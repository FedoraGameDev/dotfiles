background-alt = #444
foreground = #EEE
foreground-alt = #555
primary = #777
secondary = #e60053
alert = #bd2c40
alter1 = #444
alter2 = #222



[bar/bar1]
monitor = ${env:MONITOR:eDP}
width = 98%
height = 25
offset-x = 1%
radius = 0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color =#00000000
