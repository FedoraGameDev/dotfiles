font-2 = FontAwesome:size=10;0
font-3 = Noto Color Emoji:size=8;0
modules-left = bspwm
modules-center = date
modules-right = pulseaudio memory cpu battery
tray-position = right
tray-padding = 2
wm-restack = bspwm
cursor-click = pointer
cursor-scroll = ns-resize



[module/bspwm]
